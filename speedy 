  <!-- JavaScript for smooth scrolling on click -->
  <script>
    // Add event listeners to each navigation link for smooth scrolling
    document.querySelectorAll('.nav-link').forEach(link => {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetSection = document.getElementById(targetId);
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: 'smooth' });
        }
        // Close the menu on mobile after clicking
        document.getElementById('menu-toggle').checked = false;
      });
    });
    
    // Smooth scroll for "Get Started" button to the Contact Us section
    document.getElementById('get-started-btn').addEventListener('click', function(event) {
      event.preventDefault();
      const contactSection = document.getElementById('contact');
      if (contactSection) {
        contactSection.scrollIntoView({ behavior: 'smooth' });
      }
    });
  </script>
